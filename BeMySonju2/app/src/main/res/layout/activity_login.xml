<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_vol_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="봉사자 로그인"
        android:fontFamily="@font/omnigothic_040"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/tv_vol_login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:fontFamily="@font/omnigothic_030"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_vol_login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vol_login_title"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tv_vol_login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnigothic_030"
        android:text="비밀번호"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_vol_login_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_vol_login_id"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/et_vol_login_id"
        android:layout_width="250sp"
        android:layout_height="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vol_login_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_vol_login_id"
        app:layout_constraintTop_toTopOf="@+id/tv_vol_login_id" />

    <EditText
        android:id="@+id/et_vol_login_pw"
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vol_login_pw"
        app:layout_constraintStart_toStartOf="@+id/et_vol_login_id"
        app:layout_constraintTop_toTopOf="@+id/tv_vol_login_pw" />

    <CheckBox
        android:id="@+id/cb_vol_login_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnigothic_030"
        android:text="자동 로그인"
        app:layout_constraintEnd_toEndOf="@+id/et_vol_login_pw"
        app:layout_constraintStart_toStartOf="@+id/et_vol_login_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_vol_login_pw"
        app:layout_constraintHorizontal_bias="0.8"/>

    <Button
        android:id="@+id/btn_login"
        android:backgroundTint="@color/mint"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:padding="20dp"
        android:fontFamily="@font/omnigothic_030"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vol_login_title"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:id="@+id/tv_vol_login_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnigothic_040"
        android:text="회원가입"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.05"
        android:clickable="true" />
        //android:onClick="onTextViewClicked"/>


</androidx.constraintlayout.widget.ConstraintLayout>